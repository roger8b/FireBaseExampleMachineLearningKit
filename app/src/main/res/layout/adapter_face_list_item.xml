<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_list_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toStartOf="@+id/ll_list_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_trackingId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="boundingBox" />

            <TextView
                android:id="@+id/tv_headEulerAngleY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="boundingBox" />

            <TextView
                android:id="@+id/tv_headEulerAngleZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="boundingBox" />

            <TextView
                android:id="@+id/tv_leftEyeOpenProbability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="boundingBox" />

            <TextView
                android:id="@+id/tv_rightEyeOpenProbability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="boundingBox" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_list_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:foregroundGravity="right"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/ll_list_1">

            <TextView
                android:id="@+id/tv_boundingBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="boundingBox" />

            <TextView
                android:id="@+id/tv_smilingProbability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="boundingBox" />



            <TextView
                android:id="@+id/tv_getLandmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="boundingBox" />

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>